{% extends ':layout:layoutAdmin.html.twig' %}

{% block body %}

    {{ dump(commandes) }}

    <h1>Commandes</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Date</th>
                <th>Référence</th>
                <th>Client</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for commande in commandes %}
            <tr>
                <td>{{ commande.date|date('d-m-Y h:i:s') }}</td>
                <td>{{ commande.reference }}</td>
                <td>{{ commande.utilisateur.username }}</td>
                <td>
                    <a href="{{ path('adminShowFacture', { 'id' : commande.id }) }}" target="_blank"><i class="icon-refresh"></i></a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
