{% extends ':layout:layoutAdmin.html.twig' %}

{% block body %}
    <h1>Pages list</h1>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                {#<th>Contenu</th>#}
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% if pages|length == 0 %}
            <p>La corbeille est vide</p>
        {% else %}

            {% for page in pages %}
                <tr>
                    <td><a href="{{ path('adminPages_show', { 'id': page.id }) }}">{{ page.id }}</a></td>
                    <td>{{ page.titre }}</td>
                    {#<td>{{ page.contenu }}</td>#}
                    <td>
                        <ul>
                            <a href="{{ path('adminPages_restore', { 'id': page.id }) }}"><i class="icon-reply"></i></a>
                        </ul>
                    </td>
                </tr>
            {% endfor %}

        {% endif %}

        </tbody>
    </table>

{% endblock %}
